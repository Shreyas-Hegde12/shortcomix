---
layout: layouts/base.liquid
---

{% assign previousComic = collections.post | getPreviousCollectionItem %}
{% assign nextComic = collections.post | getNextCollectionItem %}

 <!-- POST BODY -->
            <div class='comic-container'>
               <div class='post-body comics during-touch' style='margin-top: 0px; margin-left:0px; margin-right:0px; max-width:none;'>
                  {{content}}
               </div>
            </div>

            <!-- Post TITLE -->
             <p class='post-title' id='comic-title' style='position:relative; margin-top: min(5%, 40px); margin-bottom: min(5%, 20px); font-size: 10vw; font-family: acme; width:80%; color:;'>{{title}}</p>
      
               <!-- Navigation -->
               <div style='width:100%; max-width: 600px; position:relative; display:flex; flex-direction:row; gap: 5%; justify-content:center; place-items:center; user-select:none;'>
                   
                  <!-- Prev -->
                  <div class='nav-prev' style='width: 18vw; max-width: 95px; height: auto; aspect-ratio: 16/14; background: transparent; transform: rotate(180deg);'>
                  {% if nextComic %}
                  <a href={{nextComic.url}}>
                     <img alt='Prev Comic' src='/images/sprites/arrow.png' style='width:100%; height: auto; aspect-ratio: 16/14;'/>
                  </a>
                  {% endif %}
                  </div>
                 
                  <!-- Random -->
                  <div class='nav-random' onclick='LuckyLink()'>
                     <img alt='Random Comic' src='/images/sprites/random-die.png' style='width: 29vw; max-width: 160px; height: auto; aspect-ratio: 16/12; padding: 0 5% 0 5%; cursor:pointer;'/>
                  </div>

                  <!-- next -->
                  <div class='nav-next' style='width: 18vw; max-width: 95px; height: auto; aspect-ratio: 16/14; background: transparent;'>
                     {% if previousComic %}
                     <a href={{previousComic.url}}>
                        <img alt='Next Comic' src='/images/sprites/arrow.png' style='width:100%; height: auto; aspect-ratio: 16/14;'/>
                     </a>
                     {% endif %}
                  </div>
                  
               </div>

               <div class='for-laptop'><br/></div>

               <!-- Comments --> 
               <div class='open-comments-section' onclick='commentsSection(); toEmoji();' style='background: #121212; margin: 40px 0 40px 0; width:100%; min-height: 45px; height: auto; max-height: 80px; justify-content:center;place-items:center; position:relative;cursor:pointer;'>
                  <p style='color:white!important; font-family:acme; font-size: 6.5vw; position:relative; padding: 8px 0 8px 0; user-select:none;'>Write a Comment</p>
               </div>
               <div id='cmts' name='html-comment-box' style='display:none; width: 93%; max-width: 650px;'>
                  
              <!-- comments -->
                <br/>
              <div id='disqus_thread' style='width:90%; height: auto; min-height: 40vh; display:none; background-image: url("https://i.pinimg.com/originals/71/3a/32/713a3272124cc57ba9e9fb7f59e9ab3b.gif"); background-size: 70%; background-position: center; background-repeat: no-repeat;'></div>

                 <div class='gmail-comments' style='display:none; width: 85%; max-width: 450px;margin-top: 8%;'><img src='/images/static/gmail-comment1.jpg' style='width: auto; height:auto;'/><br/><br/></div>
                 <br/>
                 
            </div>
              
               
