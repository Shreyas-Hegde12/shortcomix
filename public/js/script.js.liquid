function clipboard(text) {
	let copyText = text

	// If text says 'copylink' then copy page URL instead
	if(text === "copylink"){
		copyText = window.location.origin + window.location.pathname;
	}

	// Write to clipboard
	navigator.clipboard.writeText(copyText);
}

